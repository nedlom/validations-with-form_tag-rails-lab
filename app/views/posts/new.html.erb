<% if @post.errors.any? %>
  <div id="error_explanation">
    <% @post.errors.full_messages.each do |m| %>
      <ul>
        <li><%= m %></li>
      </ul>
    <% end %>
  </div>
<% end %>

<%= form_tag posts_path do %>
  <% if @post.errors[:title].any? %>
    <div class="field_with_errors">
  <% else %>
    <div class="field">
  <% end %>

      <%= label_tag :title %>
      <%= text_field_tag :title, @post.title %>
    </div>
  

    <% if @post.errors[:category].any? %>
    <div class="field_with_errors">
  <% else %>
    <div class="field">
  <% end %>
    <%= label_tag :category %>
    <%= text_field_tag :category, @post.category %>
  </div>


<% if @post.errors[:content].any? %>
    <div class="field_with_errors">
  <% else %>
    <div class="field">
  <% end %>
    <%= label_tag :content %>
    <%= text_field_tag :content, @post.content %>
  </div>

  <%= submit_tag "Create" %>
<% end %>